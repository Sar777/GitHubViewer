<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_event_commit_author"
        android:layout_width="@dimen/recycler_view_item_avatar_author_size"
        android:layout_height="@dimen/recycler_view_item_avatar_author_size"
        app:srcCompat="@drawable/ic_github_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_event_commit_hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recycler_view_item_event_commit_left_margin"
        android:layout_gravity="center_vertical"
        android:textColor="#4078c0" />

    <TextView
        android:id="@+id/text_event_commit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recycler_view_item_event_commit_left_margin"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>