<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="instinctools.android.activity.AuthActivity">

    <ImageView
        android:layout_width="@dimen/auth_image_width_height"
        android:layout_height="@dimen/auth_image_width_height"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button_auth"
        android:layout_marginBottom="@dimen/auth_image_margin_bottom"
        android:src="@drawable/ic_github_logo"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/auth_button_margin_top"
        android:padding="@dimen/introduction_signin_button_padding"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@drawable/background_button_sign_in_github_selector"
        android:text="@string/title_introduction_sign_in" />

</RelativeLayout>
