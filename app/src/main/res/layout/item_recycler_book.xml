<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/recycler_view_item_min_root_layout_height">

    <ImageView
        android:id="@+id/image_book"
        android:layout_width="@dimen/recycler_view_item_icon_size"
        android:layout_height="@dimen/recycler_view_item_icon_size"
        android:layout_marginTop="@dimen/recycler_view_item_margin"
        android:layout_marginLeft="@dimen/recycler_view_item_margin"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:contentDescription="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_book"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginTop="@dimen/recycler_view_item_margin"
        android:layout_marginRight="@dimen/recycler_view_item_margin"
        android:layout_marginLeft="@dimen/recycler_view_item_margin"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>
</RelativeLayout>