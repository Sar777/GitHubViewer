<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search_filter_commit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/fragment_search_order_filter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:text="@string/title_search_field_sort"/>

        <Spinner
            android:id="@+id/spinner_search_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/entries_commit_sort"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:text="@string/title_search_field_author"/>

        <EditText
            android:id="@+id/text_commit_filter_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:minWidth="100dp"
            android:textSize="12sp"
            android:textColorHint="@color/colorGithubText"
            android:hint="@string/title_search_field_github"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/title_search_field_committer"/>

        <EditText
            android:id="@+id/text_commit_filter_committer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:minWidth="100dp"
            android:textSize="12sp"
            android:textColorHint="@color/colorGithubText"
            android:hint="@string/title_search_field_sort"
            android:inputType="text" />

        <Switch
            android:id="@+id/switch_commit_filter_merge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:switchPadding="8dp"
            android:text="@string/title_search_field_is_merge"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>