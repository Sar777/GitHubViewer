<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_margin="6dp"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/text_recycler_item_issue_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:background="@drawable/background_issue_state_opened"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:padding="@dimen/description_recycler_view_item_issues_padding"
            android:text="@string/title_opened"/>

        <TextView
            android:id="@+id/text_recycler_item_issue_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_recycler_item_issue_state"
            android:padding="@dimen/description_recycler_view_item_issues_padding"
            android:textColor="#999" />

        <TextView
            android:id="@+id/text_recycler_item_issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_recycler_item_issue_id"
            android:textColor="#4078c0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="@dimen/description_recycler_view_item_issues_padding" />
    </RelativeLayout>
</RelativeLayout>